<h2>Tags INdex</h2>

<%= render "layouts/flash" %>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <% @tags.each do |tag| %>

      <li><%= link_to tag.name, tag %></li>
      <%= link_to raw("<i class=\"glyphicon glyphicon-trash\"></i>"), tag_path(tag.id), :method => :delete, data:{confirm: "You will delete this tag."}, :class=>"btn btn-danger" %>

    <% end %>
  </div>
</div>